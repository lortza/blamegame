<% content_for(:title, "Game #{@game.date}") %>

<header>
  <%= link_to 'Back to Games Index', games_path, class: "controls mb-5 #{button_classes}" if current_user.present? %>
</header>
<% unless @game.tied? %>
  <marquee>
    ✨<strong>Congrats to <%= display_winner(@game) %> for taking the win!</strong> ✨
    Here's how everyone else ranked... <%= display_player_names_and_points(@game) %>
  </marquee>
<% end %>
<section class="hero mb-5">
  <center>
    <div class="hero-body vertical-center-parent">
      <div class="container grand-winner-box">
        <h2 class="subtitle branded">
          <% unless @game.tied? %>
            Winning <%= @game.winner.rounds_won %> out of <%= pluralize(@game.rounds.length, 'round') %>,<br>
          <% end %>
          the winner is...
        </h2>
        <h1 class="winner branded">
            👑💩 <%= display_winner(@game) %>! 🎊🎉
        </h1>
      </div>
    </div>
  </center>
</section>

<section class='section'>
  <h4 class='title is-4 branded'>Winners by Round</h4>
  <% @game.rounds.each do |round| %>
    <p><%= round.number %>. <%= round.question.text %> → <span class='branded'><%= display_winner(round) %></span></p>
  <% end %>

  <%= link_to ('<i class="fas fa-gamepad mr-2"></i>'.html_safe + 'Play Another Game'), join_game_path, class: "#{button_classes} mt-5" %>
</section>
