<% content_for(:title, @category.name) %>

<%= link_to 'Back', categories_path, class: button_class('secondary float-right ml-2') %>
<%= link_to 'New Post', new_post_path, class: button_class('primary float-right ml-2') %>

<h1><%= @category.name %></h1>

<% @category.posts.by_date.each do |post| %>
  <%= render partial: 'posts/post', locals: { post: post } %>
<% end %>
