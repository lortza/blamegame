<% if @game.activated? %>
  <h1>Let's do this thing!</h1>
  <%= link_to 'Go To Round 1', new_game_round_submission_path(@game, @game.rounds.first), class: button_block %>
<% else %>
  <h1>Hold tight while your teammates arrive...</h1>

  <% @game.players.each do |player| %>
  <p><%= player.name %></p>
  <% end %>
<% end %>
